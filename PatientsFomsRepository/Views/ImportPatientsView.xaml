<UserControl x:Class="PatientsFomsRepository.Views.ImportPatientsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PatientsFomsRepository.Views"
             xmlns:i="clr-namespace:PatientsFomsRepository.Infrastructure"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PatientsFomsRepository;component/Views/Resources/DefaultStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel VerticalAlignment="Top"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Orientation="Horizontal">
        <Button Content="Загрузить"
                Command="{Binding ImportPatientsCommand}"
                Click="ButtonImportPatientsClick"
                 />
        <Button Content="Скачать пример"                
                Command="{Binding SaveExampleCommand}"
                Click="ButtonSaveExampleClick"
                 />
    </StackPanel>

</UserControl>
